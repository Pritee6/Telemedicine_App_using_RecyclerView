<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Settings.AppLock"
    android:background="@color/black">

    <androidx.appcompat.widget.Toolbar
        style="@style/TextAppearance.MaterialComponents.Headline5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="Security Settings"
        app:titleTextColor="@color/white"
        android:background="@color/black"
        android:id="@+id/buy_medicine_toolbar"
        android:layout_marginBottom="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:text="App Lock"
            android:textSize="25sp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/white"
            android:layout_marginRight="10dp"/>

        <Switch
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_gravity="end|center_vertical"
            android:id="@+id/btn_switch"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="To make your app more secure enable app lock and use your fingerprint each time to unlock the TeleMedicine App."
        android:textColor="@color/white"
        android:padding="10dp"
        android:textSize="16sp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt"
        android:text="TeleMedicine will not store or use fingerprint data for any other purpose"
        android:textColor="@color/white"
        android:padding="10dp"
        android:ellipsize="end"
        android:textSize="16sp"/>

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>