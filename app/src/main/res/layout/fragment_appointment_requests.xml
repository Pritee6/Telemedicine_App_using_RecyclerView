<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Fragments.AppointmentRequestsFragment"
    android:orientation="vertical"
    android:background="@color/black">

    <!--<androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="Appointment Requests"
        android:textStyle="bold"
        android:textColor="@color/white"
        style="@style/Base.TextAppearance.AppCompat.Headline"
        android:textSize="25sp"/>-->

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginTop="50dp"
        android:padding="5dp"
        app:cardCornerRadius="8dp"
        android:layout_marginBottom="50dp"
        app:cardBackgroundColor="@color/colorDarkGrey"
        app:cardMaxElevation="5dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="250dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ll1"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/txt_name1"
                android:gravity="start"
                android:text="Pritee Moule"
                android:textSize="20sp"
                android:layout_weight="1"
                android:padding="10dp"
                android:textColor="@color/white"/>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/btn_accept_request"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/ic_accept_request"
                    app:backgroundTint="@color/white"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_reject_request"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/ic_reject_request"
                    app:backgroundTint="@color/white"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_view_form"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:text="View Form"
                    android:textSize="12dp"
                    android:layout_marginBottom="3dp"
                    android:textColor="@color/black"
                    android:textAllCaps="false"
                    android:gravity="center"
                    app:backgroundTint="@color/white"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ll2"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="180dp"
                    android:layout_height="50dp"
                    android:id="@+id/txt_name2"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_vertical"
                    android:text="Pooja Aher"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:padding="10dp"/>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/btn_accept_request2"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/ic_accept_request"
                    app:backgroundTint="@color/white"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_reject_request2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/ic_reject_request"
                    app:backgroundTint="@color/white"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_view_form2"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:text="View Form"
                    android:textSize="12dp"
                    android:layout_marginBottom="3dp"
                    android:textColor="@color/black"
                    android:textAllCaps="false"
                    android:gravity="center"
                    app:backgroundTint="@color/white"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ll3"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="180dp"
                    android:layout_height="50dp"
                    android:id="@+id/txt_name3"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_vertical"
                    android:text="Mahesh Joshi"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:padding="10dp"/>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/btn_accept_request3"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/ic_accept_request"
                    app:backgroundTint="@color/white"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_reject_request3"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/ic_reject_request"
                    app:backgroundTint="@color/white"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_view_form3"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:text="View Form"
                    android:textSize="12dp"
                    android:layout_marginBottom="3dp"
                    android:textColor="@color/black"
                    android:textAllCaps="false"
                    android:gravity="center"
                    app:backgroundTint="@color/white"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
    </androidx.cardview.widget.CardView>

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Event to Calendar"
        android:id="@+id/btn_addEvent"
        android:textAllCaps="false"
        android:textColor="@color/black"
        app:backgroundTint="@color/white"
        app:cornerRadius="8dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_container"
                android:textColor="@color/green"
                android:textSize="16sp">
            </TextView>

        <!-- <ListView
            android:id="@+id/acceptedReqListView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"/> -->


    </LinearLayout>



        </LinearLayout>
